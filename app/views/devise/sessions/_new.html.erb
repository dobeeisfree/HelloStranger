<div class="ui basic sign_in modal" id="sign_in_devise">
  <%= form_for(:owner, url: session_path(:owner), html:{class: "ui form"}) do |f| %>
    <h1>로그인</h1>
    <div class="field">
      <%= f.label :email %>
      <div class="ui left icon input">
      <%= f.email_field :email, autofocus: true, placeholder: "이메일을 입력해주세요" %>
        <i class="user icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :password %>
      <div class="ui left icon input">
      <%= f.password_field :password, autocomplete: "off", placeholder: "비밀번호를 입력해주세요" %>
        <i class="lock icon"></i>
      </div>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="ui checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>
    <%= f.submit "로그인", class: "yellow ui fluid inverted button" %>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</div>
