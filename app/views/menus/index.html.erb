<%= javascript_include_tag params[:controller] %>

<div class="ui container owners-menu">

  <div class="ui attached message">
    <div class="header">메뉴를 등록합니다</div>
    <p id="notice"><%= notice %></p>
  </div>

  <%= form_tag(menus_path, class: "ui form attached fluid segment") do %>
    <div class="two fields">

      <div class="four wide field">
        <div class="blurring dimmable image">
          <div class="ui dimmer">
            <div class="content">
              <div class="center">
                <div class="ui inverted button">이미지 선택하기</div>
              </div>
            </div>
          </div>
          <img class="ui fluid image" src="http://semantic-ui.com/images/wireframe/image.png">
        </div>
      </div>

      <div class="twelve wide field">
        <label>매장</label>
        <select class="ui fluid dropdown">
          <option value="">매장선택</option>
          <%# TODO 사용자의 매장 목록을 불러온다 %>
        </select>
      </div>


    </div>
  <% end %>

  <div class="ui three column grid">
    <% @menus.each do |m| %>
    <div class="column">
      <div class="ui fluid card">
        <div class="image">
          <img src="http://semantic-ui.com/images/avatar/large/daniel.jpg">
        </div>
        <div class="content">
          <a class="header"><%= m.name %></a>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>
