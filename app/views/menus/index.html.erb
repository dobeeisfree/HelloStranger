<%= javascript_include_tag params[:controller] %>

<div class="ui container owners-menu">
  <div class="ui attached message">
    <div class="header">메뉴를 등록합니다</div>
    <p id="notice"><%= notice %></p>
  </div>
  <%= form_tag(menus_path, class: "ui form attached fluid segment") do %>
    <div class="two fields">
      <div class="four wide field">
        <div class="blurring dimmable image">
          <div class="ui dimmer">
            <div class="content">
              <div class="center">
                <div class="ui inverted button">이미지 선택하기</div>
              </div>
            </div>
          </div>
          <img class="ui fluid image" src="http://semantic-ui.com/images/wireframe/image.png">
        </div>
      </div>
      <div class="twelve wide field">
        <label>매장</label>
        <select class="ui fluid dropdown">
          <option value="">매장선택</option>
        </select>
      </div>
    </div>
  <% end %>



  <p id="notice"><%= notice %></p>

  <h1>Listing Menus</h1>

  <table>
    <thead>
      <tr>
        <th>Picture</th>
        <th>Price</th>
        <th>Name</th>
        <th>Recommended menu</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @menus.each do |menu| %>
        <tr>
          <td><%= menu.picture %></td>
          <td><%= menu.price %></td>
          <td><%= menu.name %></td>
          <td><%= menu.recommended_menu %></td>
          <td><%= link_to 'Show', menu %></td>
          <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
          <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Menu', new_menu_path %>
</div>
