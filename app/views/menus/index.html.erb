<div class="ui container owners-menu">

  <p id="notice"><%= notice %></p>

  <h1>Listing Menus</h1>

  <table>
    <thead>
      <tr>
        <th>Picture</th>
        <th>Price</th>
        <th>Name</th>
        <th>Recommended menu</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @menus.each do |menu| %>
        <tr>
          <td><%= menu.picture %></td>
          <td><%= menu.price %></td>
          <td><%= menu.name %></td>
          <td><%= menu.recommended_menu %></td>
          <td><%= link_to 'Show', menu %></td>
          <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
          <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Menu', new_menu_path %>
</div>
